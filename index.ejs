<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productos</title>
  <link href="/public/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-gray-100 to-gray-300 text-gray-900">
  <header class="bg-green-700 text-white text-center py-6 shadow-lg">
    <h1 class="text-4xl font-extrabold tracking-wide">Zapatería</h1>
  </header>
  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Productos</h1>
    <div class="text-center mb-6">
      <a href="/api/producto/nuevo" class="bg-green-600 text-white px-6 py-3 rounded-lg shadow hover:bg-green-700 transition duration-300">Agregar Producto</a>
    </div>
    <% for (let categoria in productosPorCategoria) { %>
      <h2 class="text-2xl font-semibold text-gray-800 mt-8 mb-4 border-b-2 border-green-600 pb-2"><%= categoria %></h2>
      <table class="min-w-full bg-white shadow-lg rounded-lg overflow-hidden">
        <thead>
          <tr class="bg-gray-200">
            <th class="py-3 px-4 text-left">Modelo</th>
            <th class="py-3 px-4 text-left">Color</th>
            <th class="py-3 px-4 text-left">Precio</th>
            <th class="py-3 px-4 text-left">Tallas</th>
            <th class="py-3 px-4 text-left">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% productosPorCategoria[categoria].forEach(producto => { %>
            <tr class="border-b">
              <td class="px-4 py-3"><%= producto.Modelo %></td>
              <td class="px-4 py-3"><%= producto.Color %></td>
              <td class="px-4 py-3"><%= producto.Precio %></td>
              <td class="px-4 py-3">
                <% producto.tallas.forEach(talla => { %>
                  <span class="block"><%= talla.Numero %> - <%= talla.Cantidad %> pares</span>
                <% }) %>
              </td>
              <td class="px-4 py-3 flex space-x-2">
                <a href="/api/producto/<%= producto.ProductoId %>/editar" class="text-blue-500 hover:underline">Editar</a>
                <form action="/api/producto/<%= producto.ProductoId %>?_method=DELETE" method="POST" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este producto?');" class="inline-block">
                  <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition duration-300">Eliminar</button>
              </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
  <footer class="bg-green-700 text-white text-center py-4 shadow-lg mt-8">
    <p class="text-sm">Página creada por alumnos de la Universidad Politécnica de Pachuca</p>
  </footer>
</body>
</html>
